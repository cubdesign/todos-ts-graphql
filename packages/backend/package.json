{
  "name": "@todos-ts-graphql/backend",
  "version": "1.0.0",
  "private": true,
  "main": "index.js",
  "type": "module",
  "license": "MIT",
  "scripts": {
    "dev": "nodemon --esm src/index.ts",
    "build": "yarn cpgql && tsc",
